{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "search.exclude": {
    "**/node_modules": true,
    ".{dev,shadowenv.d}": true,
    "{build,dist}/": true,
    "examples/*/build": true
  },
  "files.exclude": {
    "**/.DS_Store": true,
    "**/.git": true,
    "**/node_modules": true,
    ".{dev,shadowenv.d}": true,
    "{build,dist}/": true,
    "examples/*/build": true
  }
}
